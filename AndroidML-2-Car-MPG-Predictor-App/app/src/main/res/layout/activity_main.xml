<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F9F9"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtbx_developerName"
        android:layout_width="274dp"
        android:layout_height="53dp"
        android:background="#F4F9F9"
        android:fontFamily="cursive"
        android:gravity="left"
        android:text="By Soorya Parthiban"
        android:textColor="#132C33"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.176"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtbx_appTitle"
        app:layout_constraintVertical_bias="0.044" />

    <TextView
        android:id="@+id/txtbx_appTitle"
        android:layout_width="275dp"
        android:layout_height="56dp"
        android:background="#F4F9F9"
        android:fontFamily="@font/abril_fatface"
        android:gravity="left"
        android:text="Car MPG Predictor "
        android:textColor="#132C33"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.176"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.709" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="272dp"
        android:layout_height="257dp"
        app:layout_constraintBottom_toTopOf="@+id/txtbx_appTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.312"
        app:srcCompat="@drawable/applogo" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="116dp"
        android:layout_height="44dp"
        android:background="#F4F9F9"
        android:text="Start "
        android:textColor="#F4F9F9"
        android:textSize="18sp"
        app:backgroundTint="#132C33"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtbx_developerName"
        app:layout_constraintVertical_bias="0.587" />

</androidx.constraintlayout.widget.ConstraintLayout>